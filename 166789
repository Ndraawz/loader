local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local StarterGui = game:GetService("StarterGui")

local gui = Instance.new("ScreenGui", game.CoreGui)
gui.Name = "PosTracker"
gui.ResetOnSpawn = false

local frame = Instance.new("Frame", gui)
frame.Size = UDim2.new(0, 360, 0, 120)
frame.Position = UDim2.new(0.02, 0, 0.2, 0)
frame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
frame.BorderSizePixel = 0
frame.Active = true
frame.Draggable = true

local title = Instance.new("TextLabel", frame)
title.Size = UDim2.new(1, 0, 0, 25)
title.Text = "ðŸ§­ Position Tracker"
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
title.Font = Enum.Font.SourceSansSemibold
title.TextSize = 18
title.BorderSizePixel = 0
title.TextXAlignment = Enum.TextXAlignment.Left

local closeButton = Instance.new("TextButton", frame)
closeButton.Size = UDim2.new(0, 25, 0, 25)
closeButton.Position = UDim2.new(1, -25, 0, 0)
closeButton.Text = "X"
closeButton.TextColor3 = Color3.fromRGB(255, 255, 255)
closeButton.BackgroundColor3 = Color3.fromRGB(40, 0, 0)
closeButton.BorderSizePixel = 0
closeButton.Font = Enum.Font.SourceSansBold
closeButton.TextSize = 18
closeButton.AutoButtonColor = true

local codeLine1 = Instance.new("TextLabel", frame)
codeLine1.Position = UDim2.new(0, 10, 0, 30)
codeLine1.Size = UDim2.new(1, -20, 0, 25)
codeLine1.Text = ""
codeLine1.TextColor3 = Color3.fromRGB(200, 200, 200)
codeLine1.BackgroundTransparency = 1
codeLine1.Font = Enum.Font.Code
codeLine1.TextSize = 14
codeLine1.TextXAlignment = Enum.TextXAlignment.Left

local codeLine2 = Instance.new("TextLabel", frame)
codeLine2.Position = UDim2.new(0, 10, 0, 50)
codeLine2.Size = UDim2.new(1, -20, 0, 25)
codeLine2.Text = ""
codeLine2.TextColor3 = Color3.fromRGB(200, 200, 200)
codeLine2.BackgroundTransparency = 1
codeLine2.Font = Enum.Font.Code
codeLine2.TextSize = 14
codeLine2.TextXAlignment = Enum.TextXAlignment.Left

local errorText = Instance.new("TextLabel", frame)
errorText.Position = UDim2.new(0, 0, 0, 45)
errorText.Size = UDim2.new(1, 0, 0, 30)
errorText.Text = "Character not found"
errorText.TextColor3 = Color3.fromRGB(255, 80, 80)
errorText.BackgroundTransparency = 1
errorText.Font = Enum.Font.SourceSansSemibold
errorText.TextSize = 16
errorText.TextXAlignment = Enum.TextXAlignment.Center
errorText.TextYAlignment = Enum.TextYAlignment.Center
errorText.Visible = false

local copyButton = Instance.new("TextButton", frame)
copyButton.Position = UDim2.new(0, 10, 0, 85)
copyButton.Size = UDim2.new(1, -20, 0, 25)
copyButton.Text = "ðŸ“‹ Copy to Clipboard"
copyButton.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
copyButton.TextColor3 = Color3.fromRGB(255, 255, 255)
copyButton.Font = Enum.Font.SourceSans
copyButton.TextSize = 16
copyButton.AutoButtonColor = true

local currentCommand = ""

local function updatePosition()
	local char = LocalPlayer.Character
	if char and char:FindFirstChild("HumanoidRootPart") then
		local pos = char.HumanoidRootPart.Position
		codeLine1.Text = "game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame ="
		codeLine2.Text = string.format("CFrame.new(%.2f, %.2f, %.2f)", pos.X, pos.Y, pos.Z)
		currentCommand = codeLine1.Text .. " " .. codeLine2.Text
		codeLine1.Visible = true
		codeLine2.Visible = true
		errorText.Visible = false
	else
		codeLine1.Visible = false
		codeLine2.Visible = false
		errorText.Visible = true
		currentCommand = ""
	end
end

copyButton.MouseButton1Click:Connect(function()
	if currentCommand ~= "" then
		setclipboard(currentCommand)
		StarterGui:SetCore("SendNotification", {
			Title = "Copied!",
			Text = "Teleport command copied!",
			Duration = 2
		})
	end
end)

closeButton.MouseButton1Click:Connect(function()
	frame.Visible = false
end)

task.spawn(function()
	while task.wait(0.5) do
		updatePosition()
	end
end)

LocalPlayer.CharacterAdded:Connect(function(char)
	char:WaitForChild("HumanoidRootPart")
	updatePosition()
end)